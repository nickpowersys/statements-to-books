{
  "build": { "dockerfile": "Dockerfile", "context": ".." },
  "containerUser": "vscode",
  "remoteUser": "root",
  "postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"
      ]
    }
  }
}
